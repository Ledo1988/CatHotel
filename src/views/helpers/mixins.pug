mixin list-item(className, name, href)
	li(class=className)
		a(href=href class=className + "-link")= name

mixin input(idName, value, type, name, required, placeholder)
	.label-content
		label(for=idName)
			input(id=idName value=value type=type name=name required=required placeholder=placeholder)

mixin input-rate(className, idName, value, name)
	.label-content(class=className + "-label-content")
		label(for=idName class=className + "-label")
			input(class=className + "-input" id=idName value=value type="number" name=name)

mixin input__checkbox(idName, className, name, value, Title)
	.checkbox(class=className + "-checkbox")
		input(id=idName class="checkbox__input" class=className + "-checkbox-input" type="checkbox" name=name value=value)
		label(for=idName class="checkbox__label" class=className + "-checkbox-label")
			span(class="checkbox__title" class=className + "-checkbox-title")=Title